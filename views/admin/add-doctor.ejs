<!DOCTYPE html>
<html lang="en">
<head>
        <% include ../partials/head %>
</head>
<body>
    <div class="container container-fluid">
        <h3> Add Doctor </h3>       
        <form method="POST" action="/admin/add">
            <div class="form-group">
                <label> First Name </label>
                <input name="first_name" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label> Last Name</label>
                <input name="last_name" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label> Email </label>
                <input name="email" type="email" class="form-control">
            </div>
            <div class="form-group">
                <label> Password </label>
                <input name="password" type="password" class="form-control">
            </div>
            <div class="form-group radio">
                <label><input type="radio" name="gender" value="Laki-laki">Laki-laki</label>
            </div>
            <div class="form-group radio">
                <label><input type="radio" name="gender" value="Laki-laki">Perempuan</label>
            </div>
            <div class="form-group">
                    <label for="inputState"> </label>
                    <select id="inputState" class="form-control" name="specialist">
                        <option>Choose...</option>
                        <% specialists.forEach(x=>{ %>
                        <option > <%= x.specialistName %></option>
                      <% }) %>
                    </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>